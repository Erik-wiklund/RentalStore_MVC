@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Roles</h2>
            Edit Roles / @ViewBag.Name.
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="text" name="roleName" value="@Model.Name" />
            <input type="hidden" name="roleId" value="@Model.Id" />
            <input class="btn btn-primary" type="submit" value="Update Role" />                
            <a asp-action="RoleManager" asp-route-id="@ViewBag.roleId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
