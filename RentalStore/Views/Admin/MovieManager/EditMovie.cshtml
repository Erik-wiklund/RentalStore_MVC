@model MovieViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h2>Manage Movie</h2>
            Edit Movie / @ViewBag.Title.
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" asp-for="Price" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="ReleaseDate"></label>
                <input type="date" asp-for="ReleaseDate" class="form-control" value="@Model.ReleaseDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label asp-for="DurationMinutes"></label>
                <input type="text" asp-for="DurationMinutes" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Genre"></label>
                <input type="text" asp-for="Genre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input type="text" asp-for="Rating" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="InStock"></label>
                <input type="number" asp-for="InStock" class="form-control" />
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MovieImage" style="width: 100%;"></label>
                @if (Model.MovieImage != null)
                {
                    <img id="profilePicture" style="width:75px;height:75px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.MovieImage))">
                }
                else
                {
                    <img id="profilePicture" style="width:75px;height:75px; object-fit:cover" src="">
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="MovieImage"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="MovieImage" class="text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Update Movie" />
            <a asp-action="MovieManager" asp-route-id="@Model.Id"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

